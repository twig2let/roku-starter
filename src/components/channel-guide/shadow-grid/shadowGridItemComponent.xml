<?xml version="1.0" encoding="utf-8" ?>

<component name="ShadowGridItemComponent" extends="Group">

    <interface>
        <field id="itemContent" type="node" alwaysNotify="false" />
    </interface>

    <children>
        <LayoutGroup
            id="containerLayoutGroup"
            layoutDirection="horiz"
            horizAlignment="left"
            vertAlignment="top"
            itemSpacings="[46]"
            addItemSpacingAfterChild="false"
            translation="[0,55]">

            <Poster
                id="logoPoster"
                width="56"
                height="49"
                uri="pkg:/images/shadow-logo.png"
                blendColor="#222222" />

                <Label
                    id="titleLabel"
                    width="0"
                    font="font:SmallestBoldSystemFont"
                    opacity="0.3"
                    horizAlign="left"
                    vertAlign="center" />
        </LayoutGroup>

        <Animation
            id="nextColumnItemAlignmentAnimation"
            duration="0.4"
            repeat="false"
            easeFunction="outExpo">

            <Vector2DFieldInterpolator
                id="nextColumnItemAlignmentInterp"
                key="[0.0, 1.0]"
                keyValue="[[0, 55], [-250, 55]]"
                fieldToInterp="containerLayoutGroup.translation" />
        </Animation>
    </children>

    <script type="text/brightscript" uri="pkg:/components/channel-guide/shadow-grid/shadowGridItemComponent.brs" />

</component>
