<?xml version="1.0" encoding="utf-8" ?>

<component name="metadataGridItemComponent" extends="Group">

    <interface>
        <field id="itemContent" type="node" alwaysNotify="false" />
        <field id="itemHasFocus" type="boolean" onChange="onItemHasFocusChanged" />
        <field id="index" type="integer" />
        <field id="focusPercent" type="float" onChange="onFocusPercentChanged" alwaysNotify="false" />
    </interface>

    <children>
        <Poster
            id="backgroundPoster"
            translation="[0,0]" />

        <Poster
            id="focusPoster"
            translation="[0,0]" />

            <Poster
                id="logoPoster"
                width="56"
                height="48"
                translation="[46,52]" />

                <Label
                    id="titleLabel"
                    width="0"
                    font="font:MediumBoldSystemFont"
                    horizAlign="left"
                    vertAlign="center"
                    translation="[148,31]" />

                <Label
                    id="synopsisLabel"
                    width="800"
                    ellipsizeOnBoundary="true"
                    font="font:SmallestBoldSystemFont"
                    horizAlign="left"
                    vertAlign="center"
                    translation="[148,87]" />

        <!-- Now Item Focus Poster  -->
        <Animation
            id="focusedPosterAnimation"
            duration="0.4"
            repeat="false"
            easeFunction="inOutExpo">

            <Vector2DFieldInterpolator
                id = "focusedPosterAnimationInterp"
                key="[0.0, 1.0]"
                fieldToInterp="focusPoster.translation"   />
        </Animation>

        <!-- Next Item Focus Poster  -->
        <Animation
            id="focusedPosterWidthAnimation"
            duration="0.4"
            repeat="false"
            easeFunction="inOutExpo">

        <FloatFieldInterpolator
            id = "focusedPosterWidthAnimationInterp"
            key="[0.0, 1.0]"
            fieldToInterp="focusPoster.width"   />
        </Animation>
    </children>

    <script type="text/brightscript" uri="pkg:/components/channel-guide/metadata-grid/metadataGridItemComponent.brs" />
</component>
