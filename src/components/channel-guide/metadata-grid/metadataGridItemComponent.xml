<?xml version="1.0" encoding="utf-8" ?>

<component name="metadataGridItemComponent" extends="Group">

    <interface>
        <field id="itemContent" type="node" alwaysNotify="false" />
        <field id="itemHasFocus" type="boolean" onChange="onItemHasFocusChanged" />
        <field id="index" type="integer" />
        <field id="focusPercent" type="float" onChange="onFocusPercentChanged" alwaysNotify="false" />
    </interface>

    <children>
        <Poster
            id="backgroundPoster"
            translation="[0,0]" />

        <Poster
            id="focusPoster"
            translation="[0,0]" />

        <Poster
            id="logoPoster"
            visible="false"
            uri="pkg:/images/metadata-logo.png"
            width="56"
            height="48"
            translation="[46,52]" />

        <LayoutGroup
            id="topRowMetadata"
            layoutDirection="horiz"
            horizAlignment="left"
            translation="[148,31]"
            itemSpacings="[46]">

            <Label
                id="titleLabel"
                width="0"
                font="font:SmallBoldSystemFont" />

            <Label
                id="ratingLabel"
                width="0"
                font="font:SmallSystemFont" />
        </LayoutGroup>

        <Label
            id="timeLabel"
            width="0"
            font="font:SmallestSystemFont" />

        <Label
            id="synopsisLabel"
            width="800"
            ellipsizeOnBoundary="true"
            font="font:SmallestSystemFont"
            horizAlign="left"
            vertAlign="center"
            translation="[148,87]" />
    </children>

    <script type="text/brightscript" uri="pkg:/components/channel-guide/metadata-grid/metadataGridItemComponent.brs" />
</component>
