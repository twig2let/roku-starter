<?xml version="1.0" encoding="utf-8" ?>

<component name="metadataGridItemComponent" extends="Group">

    <interface>
        <field id="itemContent" type="node" alwaysNotify="true" />
        <field id="itemHasFocus" type="boolean" alwaysNotify="false" />
        <field id="gridHasFocus" type="boolean" alwaysNotify="false" />
        <field id="index" type="integer" />
        <field id="focusPercent" type="float" alwaysNotify="true" />
    </interface>

    <children>
        <Poster id="backgroundPoster" />
        <Poster id="focusPoster" />
        <Group id="templateContainer"/>
    </children>

    <script type="text/brightscript" uri="metadataGridItemComponent.brs" />
</component>
