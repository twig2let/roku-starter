<?xml version="1.0" encoding="utf-8" ?>

<component name="nowItemCompositeTemplate" extends="Group">

    <script type="text/brightscript" uri="nowItemCompositeTemplate.brs" />

    <interface>
        <field id="itemContent" type="node" alwaysNotify="true" />
        <field id="focusPercent" type="float" alwaysNotify="true" />
        <field id="gridHasFocus" type="boolean" alwaysNotify="false" />

        <field id="state" type="string" alwaysNotify="true" />
    </interface>

    <children>

        <!-- Active and Focused Template -->
        <Group
            id="activeAndFocusedTemplate"
            opacity="1"
            translation="[0,0]">

            <Poster
                id="activeAndFocusedTemplate_logoPoster"
                uri="pkg:/images/metadata-logo.png"
                width="56"
                height="48"
                translation="[46,52]"
                blendColor="0xFFFFFFFF" />

            <LayoutGroup
                layoutDirection="horiz"
                horizAlignment="left"
                vertAlignment="center"
                translation="[148,41]"
                itemSpacings="[46]">

                <Label
                    color="0xFFFFFFFF"
                    id="activeAndFocusedTemplate_titleLabel"
                    font="font:SmallBoldSystemFont" />

                <Label
                    color="0xFFFFFFFF"
                    id="activeAndFocusedTemplate_ratingLabel"
                    font="font:SmallSystemFont" />

                <Label
                    color="0xFFFFFFFF"
                    id="activeAndFocusedTemplate_timeRangeLabel"
                    font="font:SmallestSystemFont" />
            </LayoutGroup>

            <Label
                color="0xFFFFFFFF"
                id="activeAndFocusedTemplate_synopsisLabel"
                width="800"
                ellipsizeOnBoundary="true"
                font="font:SmallestSystemFont"
                horizAlign="left"
                vertAlign="center"
                translation="[148,87]" />

            <Animation id="textColorAnimation" duration="0.4" repeat="false" easeFunction="outExpo">
                <ColorFieldInterpolator key="[0.0, 1.0]" keyValue="[0xFFFFFFFF, 0x000000FF]" fieldToInterp="activeAndFocusedTemplate_logoPoster.blendColor"   />
                <ColorFieldInterpolator key="[0.0, 1.0]" id="activeAndFocusedTemplate_titleLabelInterp" keyValue="[0xFFFFFFFF, 0x000000FF]" fieldToInterp="activeAndFocusedTemplate_titleLabel.color" />
                <ColorFieldInterpolator key="[0.0, 1.0]" keyValue="[0xFFFFFFFF, 0x000000FF]" fieldToInterp="activeAndFocusedTemplate_ratingLabel.color" />
                <ColorFieldInterpolator key="[0.0, 1.0]" keyValue="[0xFFFFFFFF, 0x000000FF]" fieldToInterp="activeAndFocusedTemplate_timeRangeLabel.color" />
                <ColorFieldInterpolator key="[0.0, 1.0]" keyValue="[0xFFFFFFFF, 0x000000FF]" fieldToInterp="activeAndFocusedTemplate_timeLabel.color" />
                <ColorFieldInterpolator key="[0.0, 1.0]" keyValue="[0xFFFFFFFF, 0x000000FF]" fieldToInterp="activeAndFocusedTemplate_synopsisLabel.color" />
            </Animation>
        </Group>

        <!-- Unfocused Template -->
        <Group
            id="unfocusedTemplate"
            opacity="0"
            translation="[0,0]">

            <Poster
                id="unfocusedTemplate_logoPoster"
                uri="pkg:/images/metadata-logo.png"
                width="56"
                height="48"
                translation="[46,52]"
                blendColor="0xFFFFFFFF" />

            <LayoutGroup
                layoutDirection="horiz"
                horizAlignment="left"
                vertAlignment="center"
                translation="[148,41]"
                itemSpacings="[30]">

                <Label
                    id="unfocusedTemplate_titleLabel"
                    color="0xFFFFFFFF"
                    font="font:SmallBoldSystemFont" />

                <Label
                    id="unfocusedTemplate_timeRangeLabel"
                    color="0xFFFFFFFF"
                    font="font:SmallestSystemFont" />
            </LayoutGroup>
        </Group>
    </children>
</component>
