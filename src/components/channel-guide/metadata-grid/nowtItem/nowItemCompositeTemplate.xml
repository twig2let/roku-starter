<?xml version="1.0" encoding="utf-8" ?>

<component name="nowItemCompositeTemplate" extends="Group">

    <script type="text/brightscript" uri="nowItemCompositeTemplate.brs" />

    <interface>
        <field id="itemContent" type="node" alwaysNotify="true" />
    </interface>

    <children>

         <Poster
            id="logoPoster"
            uri="pkg:/images/metadata-logo.png"
            width="56"
            height="48"
            translation="[46,52]" />

        <LayoutGroup
            layoutDirection="horiz"
            horizAlignment="left"
            vertAlignment="center"
            translation="[148,31]"
            itemSpacings="[46]">

            <Label
                id="titleLabel"
                font="font:SmallBoldSystemFont" />

            <Label
                id="ratingLabel"
                font="font:SmallSystemFont" />

            <Label
                id="timeRangeLabel"
                font="font:SmallestSystemFont" />
        </LayoutGroup>

        <Label
            id="synopsisLabel"
            width="800"
            ellipsizeOnBoundary="true"
            font="font:SmallestSystemFont"
            horizAlign="left"
            vertAlign="center"
            translation="[148,87]" />

        <Animation id="textColorFadeAnimation" duration="0.8" repeat="false" easeFunction="linear">
            <ColorFieldInterpolator id="testColor"   key="[0.0, 1.0]"    keyValue="[ 0x00FFFFFF, 0x00000000 ]"  fieldToInterp="titleLabel.color"   />
            <ColorFieldInterpolator id="testColor"   key="[0.0, 1.0]"    keyValue="[ 0x00FFFFFF, 0x00000000 ]"  fieldToInterp="ratingLabel.color"   />
            <ColorFieldInterpolator id="testColor"   key="[0.0, 1.0]"    keyValue="[ 0x00FFFFFF, 0x00000000 ]"  fieldToInterp="timeLabel.color"   />
            <ColorFieldInterpolator id="testColor"   key="[0.0, 1.0]"    keyValue="[ 0x00FFFFFF, 0x00000000 ]"  fieldToInterp="synopsisLabel.color"   />
        </Animation>
    </children>
</component>
