<?xml version="1.0" encoding="utf-8" ?>

<component name="nowItemCompositeTemplate" extends="Group">

    <script type="text/brightscript" uri="nowItemCompositeTemplate.brs" />

    <interface>
        <field id="itemContent" type="node" alwaysNotify="true" />
        <field id="focusPercent" type="float" alwaysNotify="true" />
        <field id="state" type="string" alwaysNotify="true" />
    </interface>

    <children>

        <!-- Footprint Template -->
        <Group
            id="footprintTemplate"
            opacity="1"
            translation="[0,0]">

            <Poster
                id="footprintTemplate_logoPoster"
                uri="pkg:/images/metadata-logo.png"
                width="56"
                height="48"
                translation="[46,52]"
                blendColor="0xFFFFFFFF" />

            <LayoutGroup
                layoutDirection="horiz"
                horizAlignment="left"
                vertAlignment="center"
                translation="[148,41]"
                itemSpacings="[46]">

                <Label
                    color="0xFFFFFFFF"
                    id="footprintTemplate_titleLabel"
                    font="font:SmallBoldSystemFont" />

                <Label
                    color="0xFFFFFFFF"
                    id="footprintTemplate_ratingLabel"
                    font="font:SmallSystemFont" />

                <Label
                    color="0xFFFFFFFF"
                    id="footprintTemplate_timeRangeLabel"
                    font="font:SmallestSystemFont" />
            </LayoutGroup>

            <Label
                color="0xFFFFFFFF"
                id="footprintTemplate_synopsisLabel"
                width="800"
                ellipsizeOnBoundary="true"
                font="font:SmallestSystemFont"
                horizAlign="left"
                vertAlign="center"
                translation="[148,87]" />
        </Group>

        <!-- Focused Template -->
        <Group
            id="focusedTemplate"
            opacity="0"
            translation="[0,0]">

            <Poster
                id="focusedTemplate_logoPoster"
                uri="pkg:/images/metadata-logo.png"
                width="56"
                height="48"
                translation="[46,52]"
                blendColor="0x000000FF" />

            <LayoutGroup
                layoutDirection="horiz"
                horizAlignment="left"
                vertAlignment="center"
                translation="[148,41]"
                itemSpacings="[46]">

                <Label
                    color="0x000000FF"
                    id="focusedTemplate_titleLabel"
                    font="font:SmallBoldSystemFont" />

                <Label
                    color="0x000000FF"
                    id="focusedTemplate_ratingLabel"
                    font="font:SmallSystemFont" />

                <Label
                    color="0x000000FF"
                    id="focusedTemplate_timeRangeLabel"
                    font="font:SmallestSystemFont" />
            </LayoutGroup>

            <Label
                color="0x000000FF"
                id="focusedTemplate_synopsisLabel"
                width="800"
                ellipsizeOnBoundary="true"
                font="font:SmallestSystemFont"
                horizAlign="left"
                vertAlign="center"
                translation="[148,87]" />
        </Group>

        <!-- Unfocused Template -->
        <Group
            id="unfocusedTemplate"
            opacity="0"
            translation="[0,0]">

            <Poster
                id="unfocusedTemplate_logoPoster"
                uri="pkg:/images/metadata-logo.png"
                width="56"
                height="48"
                translation="[46,52]"
                blendColor="0xFFFFFFFF" />

            <LayoutGroup
                layoutDirection="horiz"
                horizAlignment="left"
                vertAlignment="center"
                translation="[148,41]"
                itemSpacings="[30]">

                <Label
                    id="unfocusedTemplate_titleLabel"
                    color="0xFFFFFFFF"
                    font="font:SmallBoldSystemFont" />

                <Label
                    id="unfocusedTemplate_timeRangeLabel"
                    color="0xFFFFFFFF"
                    font="font:SmallestSystemFont" />
            </LayoutGroup>
        </Group>
    </children>
</component>
