<?xml version="1.0" encoding="utf-8" ?>

<component name="nextItemCompositeTemplate" extends="Group">

    <script type="text/brightscript" uri="nextItemCompositeTemplate.brs" />

    <interface>
        <field id="itemContent" type="node" alwaysNotify="true" />
        <field id="focusPercent" type="float" alwaysNotify="true" />
        <field id="gridHasFocus" type="boolean" alwaysNotify="false" />
        <field id="state" type="string" alwaysNotify="true" />
    </interface>

    <children>
        <Group id="titleSynopsisGroup">

            <LayoutGroup
                layoutDirection="vert"
                horizAlignment="left"
                itemSpacings="[30]"
                translation="[31,0]"> <!-- Implementation Note: The X coord needs to be set dynamically e.g. 1080, 720 -->

                <Label
                    id="titleLabel"
                    color="0xFFFFFFFF"
                    font="font:SmallBoldSystemFont" />
                    <ColorFieldInterpolator id="titleLabelColorInterp"  key="[0.0, 1.0]" keyValue="[0xFFFFFFFF, 0x000000FF]" fieldToInterp="titleLabel.color"   />

                <Label
                    id="synopsisLabel"
                    color="0x000000FF"
                    font="font:SmallestSystemFont" />
            </LayoutGroup>
        </Group>

        <Label
            id="timeRangeLabel"
            color="0xFFFFFFFF"
            font="font:SmallestSystemFont"
            translation="[325, 31]" />
            
            <ColorFieldInterpolator id="timeRangeLabelColorInterp"  key="[0.0, 1.0]" keyValue="[0xFFFFFFFF, 0x000000FF]" fieldToInterp="timeRangeLabel.color"   />
    </children>
</component>
