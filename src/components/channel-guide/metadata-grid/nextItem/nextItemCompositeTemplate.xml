<?xml version="1.0" encoding="utf-8" ?>

<component name="nextItemCompositeTemplate" extends="Group">

    <script type="text/brightscript" uri="nextItemCompositeTemplate.brs" />

    <interface>
        <field id="itemContent" type="node" alwaysNotify="true" />
        <field id="focusPercent" type="float" alwaysNotify="true" />
        <field id="gridHasFocus" type="boolean" alwaysNotify="false" />
    </interface>

    <children>
        <Group
            id="titleSynopsisGroup"
            translation="[31,31]">

            <LayoutGroup
                layoutDirection="vert"
                horizAlignment="left"
                itemSpacings="[30]">

                <Label
                    id="titleLabel"
                    color="0xFFFFFFFF"
                    font="font:SmallBoldSystemFont" />

                <Label
                    id="synopsisLabel"
                    color="0x000000FF"
                    font="font:SmallestSystemFont" />
            </LayoutGroup>
        </Group>

        <Label
            id="timeRangeLabel"
            color="0xFFFFFFFF"
            font="font:SmallestSystemFont" />

        <Animation id="textColorAnimation" duration="0.8" repeat="false" easeFunction="linear">
            <ColorFieldInterpolator id="titleLabelInterp" key="[0.0, 1.0]" keyValue="[0xFFFFFFFF, 0x000000FF]" fieldToInterp="titleLabel.color" />
            <ColorFieldInterpolator id="timeRangeLabelInterp" key="[0.0, 1.0]" keyValue="[0xFFFFFFFF, 0x000000FF]" fieldToInterp="timeRangeLabel.color" />
            <ColorFieldInterpolator id="synopsisLabelInterp" key="[0.0, 1.0]" keyValue="[0xFFFFFFFF, 0x000000FF]" fieldToInterp="synopsisLabel.color" />
        </Animation>
    </children>
</component>
